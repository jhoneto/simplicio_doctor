<div class="container mt-4">
  <%= form_with(model: @user, url: user_path(@user), local: true) do |form| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title text-center">Configrações de pagamento</h5>
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
              <%= form.label :payment_type %>
              <%= form.select :payment_type, [['Transferência', 'bank_transfer'], ['Pix', 'pix']], {}, { class: "form-control" } %>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <%= form.label :pix %>
              <%= form.text_field :pix, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= form.label :bank_code %>
              <%= form.select :bank_code, Bank.all.map { |bank| [bank.name, bank.code] }, {}, { class: "form-control" } %>
            </div>
          </div>
          <div class="col-md-2">
            <div class="form-group">
              <%= form.label :bank_agency %>
              <%= form.text_field :bank_agency, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-2">
            <div class="form-group">
              <%= form.label :bank_account %>
              <%= form.text_field :bank_account, class: "form-control" %>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="card mt-4">
      <div class="card-body">
        <h5 class="card-title text-center">Alteração de senha</h5>
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
              <%= form.label :current_password %>
              <%= form.text_field :current_password, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <%= form.label :new_password %>
              <%= form.text_field :password, class: "form-control" %>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
              <%= form.label :new_password_confirmation %>
              <%= form.text_field :password, class: "form-control" %>
            </div>
          </div>
        </div>

      </div>
    </div>
    <%= form.submit "Salvar", class: "btn btn-primary" %>
  <% end %>
</div>