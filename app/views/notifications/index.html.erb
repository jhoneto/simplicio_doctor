<div class="container">
  <div class="row">
    <% @notifications.each do |notification| %>
      <div class="col-12 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <p class="card-text mb-0"><%= notification.title %></p>
              <% if notification.read? %>
                <span class="badge bg-success">Lida</span>
              <% else %>
                <span class="badge bg-warning text-dark">NÃ£o Lida</span>
              <% end %>
            </div>
            <p class="card-text"><small><%= I18n.l(notification.created_at, format: :long) %></small></p>
            <a href="<%= notification_path(notification) %>" class="btn btn-primary">Ler</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>