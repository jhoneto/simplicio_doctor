<div class="container">
  <div class="row mb-3">
    <div class="col-12 d-flex justify-content-start">
      <%= link_to 'Tudo', notifications_path, class: "btn #{active_notification_filter(nil, params[:filter])} me-2 mr-2 rounded-pill" %> 
      <%= link_to 'Não Lidas', notifications_path(filter: 'unread'), class: "btn #{active_notification_filter(:unread, params[:filter].to_sym)} rounded-pill" %> 
    </div>
  </div>
  <div class="row">
    <% @notifications.each do |notification| %>
      <div class="col-12 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <p class="card-text mb-0"><%= notification.title %></p>
              <% if notification.read? %>
                <span class="badge bg-success">Lida</span>
              <% else %>
                <span class="badge bg-warning text-dark">Não Lida</span>
              <% end %>
            </div>
            <p class="card-text"><small><%= I18n.l(notification.created_at, format: :long) %></small></p>
            <a href="<%= notification_path(notification) %>" class="btn btn-primary">Ler</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>